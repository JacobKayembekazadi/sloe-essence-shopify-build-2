{%- if paginate.parts.size > 0 -%}
  <nav class="pagination flex justify-center items-center space-x-2" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
    {%- if paginate.previous -%}
      <a href="{{ paginate.previous.url }}" class="pagination-item pagination-prev px-4 py-2 border border-border rounded-md hover:bg-accent transition-colors" aria-label="{{ 'general.pagination.previous' | t }}">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </a>
    {%- else -%}
      <span class="pagination-item pagination-prev px-4 py-2 border border-border rounded-md opacity-50 cursor-not-allowed">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </span>
    {%- endif -%}

    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <a href="{{ part.url }}" class="pagination-item px-3 py-2 border border-border rounded-md hover:bg-accent transition-colors" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
          {{ part.title }}
        </a>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <span class="pagination-item px-3 py-2 border border-primary bg-primary text-white rounded-md" aria-current="page" aria-label="{{ 'general.pagination.current_page' | t: number: part.title }}">
            {{ part.title }}
          </span>
        {%- else -%}
          <span class="pagination-item px-3 py-2">{{ part.title }}</span>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

    {%- if paginate.next -%}
      <a href="{{ paginate.next.url }}" class="pagination-item pagination-next px-4 py-2 border border-border rounded-md hover:bg-accent transition-colors" aria-label="{{ 'general.pagination.next' | t }}">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    {%- else -%}
      <span class="pagination-item pagination-next px-4 py-2 border border-border rounded-md opacity-50 cursor-not-allowed">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </span>
    {%- endif -%}
  </nav>
{%- endif -%}