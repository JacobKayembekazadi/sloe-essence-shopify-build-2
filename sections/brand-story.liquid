<section class="brand-story bg-background py-24">
  <div class="max-w-container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      {%- if section.settings.image != blank -%}
        <div class="aspect-w-4 aspect-h-3">
          <img
            src="{{ section.settings.image | image_url: width: 800, height: 600 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="w-full h-full object-cover rounded-sloe-card"
            loading="lazy"
            width="800"
            height="600"
          >
        </div>
      {%- else -%}
        <div class="aspect-w-4 aspect-h-3">
          <img
            src="https://placehold.co/800x600/F5F5F7/1D1D1F?text=Sloe+Lab&font=manrope"
            alt="Brand story"
            class="w-full h-full object-cover rounded-sloe-card"
            loading="lazy"
            width="800"
            height="600"
          >
        </div>
      {%- endif -%}
      
      <div>
        <h2 class="font-display font-bold text-3xl lg:text-4xl text-text">
          {%- if section.settings.heading != blank -%}
            {{ section.settings.heading }}
          {%- else -%}
            Expert Skincare. For Everyone.
          {%- endif -%}
        </h2>
        
        {%- if section.settings.text != blank -%}
          <div class="mt-6 text-lg text-text opacity-80 prose">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
        
        {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
          <div class="mt-10">
            <a href="{{ section.settings.button_url }}" class="btn-secondary">
              {{ section.settings.button_text }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brand Story",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Expert Skincare. For Everyone."
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>We're democratizing skincare by blending the best of nature—pure, organic ingredients—with the power of AI. We're your partner in skin health, here to provide a smarter, more personal path to your best skin.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Learn Our Mission"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Brand Story"
    }
  ]
}
{% endschema %}