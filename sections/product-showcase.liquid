<section class="product-showcase bg-white py-20">
  <div class="max-w-container mx-auto px-4 lg:px-8">
    <h2 class="font-display font-bold text-3xl lg:text-4xl text-center text-text mb-12">
      {%- if section.settings.heading != blank -%}
        {{ section.settings.heading }}
      {%- else -%}
        Meet the Core Essentials
      {%- endif -%}
    </h2>
    
    {%- if section.settings.collection != blank -%}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {%- for product in section.settings.collection.products limit: 3 -%}
          <div class="bg-accent p-6 rounded-sloe-card shadow-lg text-center">
            {%- if product.featured_image -%}
              <img
                src="{{ product.featured_image | image_url: width: 160, height: 160 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="w-40 h-40 object-cover mx-auto mb-6 rounded-md"
                loading="lazy"
                width="160"
                height="160"
              >
            {%- endif -%}
            
            <h3 class="font-display font-bold text-xl text-text mb-2">
              {{ product.title }}
            </h3>
            
            <p class="font-medium text-primary mb-3">
              {{ product.price | money }}
            </p>
            
            {%- if product.description != blank -%}
              <p class="text-text opacity-80 text-md font-semibold">
                {{ product.description | strip_html | truncate: 60 }}
              </p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
    
    <div class="text-center mt-12">
      {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
        <a href="{{ section.settings.button_url }}" class="btn-secondary">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Showcase",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Meet the Core Essentials"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop All Products"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Product Showcase"
    }
  ]
}
{% endschema %}