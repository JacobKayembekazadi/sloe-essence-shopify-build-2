<section class="hero bg-background py-24">
  <div class="max-w-container mx-auto px-4 lg:px-8 text-center">
    <h1 class="font-display font-bold text-4xl lg:text-6xl tracking-tight text-text">
      {%- if section.settings.heading != blank -%}
        {{ section.settings.heading }}
      {%- else -%}
        AI-Powered Skincare.<br>Organically Sourced.
      {%- endif -%}
    </h1>
    
    {%- if section.settings.subtext != blank -%}
      <p class="mt-6 text-lg max-w-2xl mx-auto text-text opacity-80">
        {{ section.settings.subtext }}
      </p>
    {%- endif -%}
    
    <div class="mt-10">
      {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
        <a href="{{ section.settings.button_url }}" class="btn-primary">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "AI-Powered Skincare.<br>Organically Sourced."
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Stop guessing. Let our AI analyze your skin and build the perfect routine for you."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Discover Your Routine"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}