<section class="how-it-works bg-accent py-20">
  <div class="max-w-container mx-auto px-4 lg:px-8">
    <h2 class="font-display font-bold text-3xl lg:text-4xl text-center text-text mb-16">
      {%- if section.settings.heading != blank -%}
        {{ section.settings.heading }}
      {%- else -%}
        How Sloe Essence Works
      {%- endif -%}
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {%- for block in section.blocks -%}
        <div class="flex flex-col items-center text-center p-6 bg-white rounded-sloe-card shadow-md" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="text-5xl mb-4" role="img" aria-label="{{ block.settings.title }}">
              {{ block.settings.icon }}
            </div>
          {%- endif -%}
          
          <h3 class="font-display font-bold text-xl text-primary mb-2">
            Step {{ forloop.index }}: {{ block.settings.title }}
          </h3>
          
          {%- if block.settings.description != blank -%}
            <p class="text-text opacity-80 text-lg">
              {{ block.settings.description }}
            </p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

