<footer class="footer bg-text">
  <div class="max-w-container mx-auto px-4 lg:px-8 py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {%- for block in section.blocks -%}
        <div {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'link_list' -%}
              {%- if block.settings.heading != blank -%}
                <h4 class="font-display font-bold text-lg mb-4 text-white">
                  {{ block.settings.heading }}
                </h4>
              {%- endif -%}
              
              {%- if block.settings.menu != blank -%}
                <ul class="space-y-3">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="text-white opacity-70 hover:opacity-100 transition-colors">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
              
            {%- when 'social_links' -%}
              {%- if block.settings.heading != blank -%}
                <h4 class="font-display font-bold text-lg mb-4 text-white">
                  {{ block.settings.heading }}
                </h4>
              {%- endif -%}
              
              <div class="flex space-x-4">
                {%- if settings.social_instagram != blank -%}
                  <a href="{{ settings.social_instagram }}" aria-label="Instagram" class="text-white opacity-70 hover:opacity-100">
                    {% render 'icon-instagram' %}
                  </a>
                {%- endif -%}
                {%- if settings.social_tiktok != blank -%}
                  <a href="{{ settings.social_tiktok }}" aria-label="TikTok" class="text-white opacity-70 hover:opacity-100">
                    {% render 'icon-tiktok' %}
                  </a>
                {%- endif -%}
                {%- if settings.social_facebook != blank -%}
                  <a href="{{ settings.social_facebook }}" aria-label="Facebook" class="text-white opacity-70 hover:opacity-100">
                    {% render 'icon-facebook' %}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
    
    {%- comment -%} Bottom Bar {%- endcomment -%}
    <div class="mt-12 pt-8 border-t border-white/20 text-center text-sm text-white/50">
      Â© {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Link list",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "social_links",
      "name": "Social links",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Follow Us"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list",
          "settings": {
            "heading": "Shop"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Learn"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Help"
          }
        },
        {
          "type": "social_links"
        }
      ]
    }
  ]
}
{% endschema %}